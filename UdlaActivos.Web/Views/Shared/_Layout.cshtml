@{
    Layout = null;
    string ctrl = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "");
    string title = ViewData["Title"]?.ToString() ?? "UDLA Activos";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        :root {
            --sidebar-w: 260px;
            --topbar-h: 64x;
            --space: 16px;
        }

        /* Base */
        * {
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            background: #f7f7f9;
            color: #111;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            inset: 0 auto 0 0; /* top right bottom left */
            width: var(--sidebar-w);
            background: #fff;
            border-right: 1px solid #eee;
            overflow-y: auto;
        }

        .brand {
            height: var(--topbar-h); /* misma altura que topbar */
            display: flex;
            align-items: center;
            padding: 0 var(--space); /* solo horizontal */
            font-weight: 700;
            border-bottom: 1px solid #eee;
        }

        .muted {
            color: #6b6f76;
            font-size: .9rem;
        }

        .nav-link {
            color: #111;
            border-radius: .6rem;
            padding: .6rem .9rem;
        }

            .nav-link.active {
                background: #f0f2f5;
                font-weight: 600;
            }

        /* Contenido principal */
        .content {
            margin-left: var(--sidebar-w);
        }

        .topbar {
            height: var(--topbar-h);
            background: #fff;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            padding: 0 var(--space);
        }

        .page {
            padding: 16px;
            min-height: calc(100dvh - var(--topbar-h));
        }

        /* Responsive: sidebar arriba en pantallas estrechas */
        @@media (max-width: 992px) {
            .sidebar {
                position: static;
                width: 100%;
                height: auto;
                border-right: none;
                border-bottom: 1px solid #eee;
            }

            .content {
                margin-left: 0;
            }
        }

        /* Search input con icono interno */
        .search-input {
            background-color: #fff;
            border: 1px solid #e6e8eb;
            border-radius: 12px;
            height: 42px;
            padding-left: 38px; /* espacio para el icono */
            box-shadow: 0 1px 2px rgba(0,0,0,.03) inset;
            background-repeat: no-repeat;
            background-position: 12px 50%;
            background-size: 18px 18px;
            /* SVG magnifying glass embebido (color gris #9aa0a6) */
            background-image: url(<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search absolute left-2.5 top-2.5 h-4 w-4 text-muted-foreground"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>);
        }

            .search-input::placeholder {
                color: #9aa0a6;
            }

            .search-input:focus {
                outline: 0;
                border-color: #cfd4d9;
                box-shadow: 0 0 0 3px rgba(17,17,17,.06);
            }

    </style>
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="brand">🛠️ UDLA Activos</div>
        <nav class="p-3 d-grid gap-2">
            <div class="muted mb-1">General</div>
            <a class="nav-link @(ctrl == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a>
            <a class="nav-link @(ctrl == "Assets" ? "active" : "")" asp-controller="Assets" asp-action="Index">💻 Activos</a>
            <a class="nav-link disabled">🧰 Mantenimientos</a>
            <a class="nav-link disabled">📄 Actas</a>
            <a class="nav-link disabled">🔁 Sincronización SAP</a>
            <div class="muted mt-3 mb-1">Administración</div>
            <a class="nav-link disabled">👥 Usuarios</a>
            <a class="nav-link disabled">⚙️ Configuración</a>
        </nav>
    </aside>

    <!-- Topbar (solo título) -->
    <header class="topbar content">
        <h5 class="m-0">@title</h5>
    </header>

    <!-- Área de visualización -->
    <main class="content page">
        @RenderBody()
    </main>
</body>
</html>
